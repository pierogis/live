---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

import { SEO } from "astro-seo";

import { Divider } from "@pierogis/utensils";
import Base from "./Base.astro";

interface Props {
  loaf: CollectionEntry<"loafs">;
}

const { loaf } = Astro.props;
const { data } = loaf;

const {
  title,
  publishedDate,
  subtitle,
  description,
  author,
  image,
  alt,
  tags,
} = data;

const ogImageSrc = new URL(image.og.src, Astro.url.origin).toString();
const twitterImageSrc = new URL(image.twitter.src, Astro.url.origin).toString();
---

<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "loaf",
          image: ogImageSrc,
        },
        image: {
          url: ogImageSrc,
          alt: alt,
        },
      }}
      twitter={{
        title: title,
        description: description,
        card: "summary",
        site: "@pierogis_live",
        creator: author.twitterHandle ? "@" + author.twitterHandle : undefined,
        image: twitterImageSrc,
        imageAlt: alt,
      }}
    />
  </head>
  <Base pageTitle={title}>
    <article>
      <section>
        <div class="lead">
          <h1 class="title">
            {title}
          </h1>
          <i>{subtitle}</i>
          <div class="metadata">
            <p class="author">{author.name}</p>
            <p class="date">
              {publishedDate.toISOString().slice(0, 10)}
            </p>
          </div>
        </div>

        <Divider horizontal margin="0" />
      </section>

      <!-- <Image
        src={image[1200]}
        widths={[300, 600, image[1200].width]}
        sizes={`(max-width: 360px) 300px, (max-width: 720px) 600px, ${image[1200].width}px`}
        {alt}
      /> -->

      <picture>
        <source
          srcset={image[300].src}
          media="(orientation: portrait), (max-width: 768px)"
        />
        <source srcset={image[600].src} media="(max-width: 1500px)" />
        <img src={image[1200].src} {alt} class="border" />
      </picture>

      <div class="content">
        <slot />
      </div>
    </article>

    <div class="tags">
      {
        tags.map((tag) => {
          return (
            <a href={`/tags/${tag}`}>
              <i>#{tag}</i>
            </a>
          );
        })
      }
    </div>
  </Base>

  <style>
    img {
      border-radius: 16px;
      image-rendering: pixelated;
    }

    article {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 10px;
    }
    .lead {
      display: flex;
      flex-direction: column;
      justify-content: center;
      max-width: 768px;
    }

    .title {
      font-weight: 700;
      /* letter-spacing: -0.025em; */
      margin: 0;
      line-height: 1em;
    }

    .metadata {
      display: flex;
      justify-content: space-between;
      margin-top: 0.5rem;
      width: 100%;
      gap: 8px;
    }

    .author {
      font-weight: 700;
    }
    .date {
      font-weight: 500;
    }

    .author,
    .date,
    .title {
      margin: 0;
    }

    .content {
      padding: 0 10rem;
    }

    section {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    @media (orientation: portait) {
      img {
        max-width: 90vw;
      }
    }

    @media (max-width: 768px) {
      .title {
        text-align: center;
      }
      .content {
        padding: 0;
      }
    }

    .tags {
      padding: 8px;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</html>
