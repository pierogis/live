{
  "name": "@pierogis/utensils",
  "version": "1.0.1",
  "description": "a set of utensils to aid consumption",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pierogis/live.git"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/pierogis/live/issues"
  },
  "homepage": "https://utensils.pierogis.live",
  "keywords": [
    "svelte",
    "ui",
    "components"
  ],
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./styles/*": "./dist/styles/*",
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*/index.d.ts",
      "import": "./dist/utils/*/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "postinstall": "svelte-kit sync",
    "dev": "svelte-kit sync && svelte-package --watch",
    "build": "npm run package",
    "prepare": "npm run build",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/kit": "2.27.3",
    "@sveltejs/vite-plugin-svelte": "6.1.1",
    "@sveltejs/package": "2.4.1",
    "publint": "0.3.12",
    "svelte": "5.38.0",
    "svelte-check": "4.3.1",
    "typescript": "5.9.2"
  }
}
