{
	"name": "@pierogis/emporium",
	"version": "0.0.1",
	"description": "a place for plates",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pierogis/emporium.git"
	},
	"license": "AGPL-3.0",
	"bugs": {
		"url": "https://github.com/pierogis/emporium/issues"
	},
	"homepage": "https://emporium.pierogis.live",
	"keywords": [
		"svelte",
		"plates",
		"website"
	],
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"postinstall": "prisma generate",
		"prepare": "svelte-kit sync",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"db:migrate": "prisma migrate dev",
		"db:seed": "prisma db seed",
		"db:reset": "prisma migrate reset",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"prisma": {
		"seed": "node --experimental-specifier-resolution=node --loader ts-node/esm prisma/seeds/index.ts"
	},
	"devDependencies": {
		"@pierogis/utensils": "^0.0.8",
		"@sveltejs/adapter-auto": "^1.0.0-next.50",
		"@sveltejs/kit": "^1.0.0-next.347",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"dotenv": "^16.0.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.0",
		"prisma": "^3.14.0",
		"svelte": "^3.48.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.10.5",
		"ts-node": "^10.5.0",
		"tslib": "^2.3.1",
		"typescript": "~4.5.4"
	},
	"type": "module",
	"dependencies": {
		"@hapi/iron": "^6.0.0",
		"@pierogis/utensils": "^0.0.7",
		"@prisma/client": "^3.14.0",
		"cookie": "^0.4.1",
		"nodemailer": "^6.7.2",
		"redis": "^4.0.4"
	}
}
