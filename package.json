{
	"name": "@pierogis/emporium",
	"version": "0.0.1",
	"description": "a place for plates",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pierogis/emporium.git"
	},
	"license": "AGPL-3.0",
	"bugs": {
		"url": "https://github.com/pierogis/emporium/issues"
	},
	"homepage": "https://emporium.pierogis.live",
	"keywords": [
		"svelte",
		"plates",
		"website"
	],
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"postinstall": "prisma generate",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"db:migrate": "prisma migrate dev",
		"db:seed": "prisma db seed",
		"db:reset": "prisma migrate reset",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. . && prisma format",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"lint:fix": "eslint --fix --ignore-path .gitignore ."
	},
	"prisma": {
		"seed": "node --experimental-specifier-resolution=node --loader ts-node/esm prisma/seeds/index.ts"
	},
	"devDependencies": {
		"@pierogis/utensils": "^0.2.4",
		"@sveltejs/adapter-auto": "1.0.0-next.65",
		"@sveltejs/kit": "^1.0.0-next.483",
		"@types/nodemailer": "^6.4.6",
		"@typescript-eslint/eslint-plugin": "^5.37.0",
		"@typescript-eslint/parser": "^5.37.0",
		"dotenv": "^16.0.2",
		"eslint": "^8.23.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"prisma": "^4.3.1",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.0",
		"svelte-preprocess": "^4.10.7",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.0",
		"typescript": "~4.8.3",
		"vite": "^3.1.1"
	},
	"dependencies": {
		"@prisma/client": "^4.3.1",
		"nodemailer": "^6.7.8",
		"redis": "^4.3.1"
	},
	"type": "module"
}
