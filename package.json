{
	"name": "@pierogis/emporium",
	"version": "0.0.1",
	"description": "a place for plates",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pierogis/emporium.git"
	},
	"license": "AGPL-3.0",
	"bugs": {
		"url": "https://github.com/pierogis/emporium/issues"
	},
	"homepage": "https://emporium.pierogis.live",
	"keywords": [
		"svelte",
		"plates",
		"website"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"postinstall": "prisma generate",
		"package": "svelte-package",
		"preview": "vite preview",
		"db:migrate": "prisma migrate dev",
		"db:seed": "prisma db seed",
		"db:reset": "prisma migrate reset",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. . && prisma format",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"lint:fix": "pnpm run format && eslint --fix --ignore-path .gitignore ."
	},
	"prisma": {
		"seed": "node --experimental-specifier-resolution=node --loader ts-node/esm prisma/seeds/index.ts"
	},
	"devDependencies": {
		"@pierogis/utensils": "^0.4.1",
		"@sveltejs/adapter-auto": "2.0.0",
		"@sveltejs/kit": "^1.13.0",
		"@types/nodemailer": "^6.4.7",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"dotenv": "^16.0.3",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.6",
		"prettier-plugin-svelte": "^2.10.0",
		"prisma": "^4.11.0",
		"svelte": "^3.57.0",
		"svelte-check": "^3.1.4",
		"ts-node": "^10.9.1",
		"tslib": "^2.5.0",
		"typescript": "~5.0.2",
		"vite": "^4.2.1"
	},
	"dependencies": {
		"@prisma/client": "^4.11.0",
		"nodemailer": "^6.9.1",
		"redis": "^4.6.5"
	},
	"packageManager": "pnpm@8.1.0",
	"engines": {
		"pnpm": "^8.0.0"
	},
	"type": "module"
}
