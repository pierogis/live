{
	"name": "@pierogis/emporium",
	"version": "0.0.1",
	"description": "a place for plates",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pierogis/emporium.git"
	},
	"license": "AGPL-3.0",
	"bugs": {
		"url": "https://github.com/pierogis/emporium/issues"
	},
	"homepage": "https://emporium.pierogis.live",
	"keywords": [
		"svelte",
		"plates",
		"website"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-package",
		"preview": "vite preview",
		"db:migrate": "drizzle-kit generate:pg",
		"db:seed": "node --experimental-specifier-resolution=node --loader ts-node/esm seeds/index.ts",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. . && prisma format",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"lint:fix": "pnpm run format && eslint --fix --ignore-path .gitignore ."
	},
	"devDependencies": {
		"@pierogis/utensils": "^0.5.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.22.3",
		"@types/nodemailer": "^6.4.8",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.19.5",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prisma": "^4.16.2",
		"svelte": "^3.59.2",
		"svelte-check": "^3.4.6",
		"sveltekit-superforms": "^1.3.0",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.0",
		"typescript": "^5.0.4",
		"vite": "^4.4.3",
		"zod": "^3.21.4"
	},
	"dependencies": {
		"@prisma/client": "4.16.2",
		"drizzle-orm": "^0.27.2",
		"nodemailer": "^6.9.3",
		"postgres": "^3.3.5",
		"redis": "^4.6.7"
	},
	"packageManager": "pnpm@8.1.0",
	"engines": {
		"pnpm": "^8.0.0"
	},
	"type": "module"
}
